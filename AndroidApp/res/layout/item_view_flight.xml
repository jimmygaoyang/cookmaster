<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:minHeight="100dp">
    <TextView 
        android:id="@+id/flight_airline_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="海南航空2014"
        android:textSize="16sp"
        />
        <TextView 
        android:id="@+id/flight_lable_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="~"
        android:textSize="16sp"
        />
    <TextView 
        android:id="@+id/flight_from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/flight_lable_tv"
        android:layout_alignBottom="@+id/flight_lable_tv"
        android:layout_alignParentBottom="true"
        android:text="北京"
        android:textSize="16sp"
        />

    <TextView 
        android:id="@+id/flight_to_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/flight_lable_tv"
        android:layout_alignBottom="@+id/flight_lable_tv"
        android:layout_alignParentBottom="true"
        android:text="杭州"
        android:textSize="16sp"
        />

</RelativeLayout>
